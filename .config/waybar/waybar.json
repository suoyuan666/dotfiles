{
    "position": "top",
    "modules-left": [
        "niri/workspaces",
        "network",
        "cpu",
        "memory",
    ],
    "modules-center": [
        "mpris",
        "privacy",
        "niri/window"
    ],
    "modules-right": [
        "tray",
        "wireplumber",
        "backlight",
        "clock",
        "battery",
        "power-profiles-daemon"
    ],

    "niri/window": {
        "format": "{}",
        "max-length": 35,
        "all-outputs" : true,
        "offscreen-css" : true,
        "offscreen-css-text": "(inactive)",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "Û∞àπ $1",
            "(.*) - fish": "> [$1]"
        }
    },
    "niri/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "ÔÑ† ",
            "2": "Ôâ® ",
            "3": "ÔÑ° ",
            "4": "ÔÄÅ ",
            "5": "ÔÅµ "
        }
    },
    "sway/window": {
        "format": "{}",
        "max-length": 35,
        "all-outputs" : true,
        "offscreen-css" : true,
        "offscreen-css-text": "(inactive)",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "Û∞àπ $1",
            "(.*) - fish": "> [$1]",
            "(.*) - Brave": "Ôâ®  [$1]",
            "(.*) - Chromium": "Ôâ®  [$1]",
            "(.*) - VSCodium": "ÔÑ°  [$1]"
        }
    },
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "sort-by-number": true,
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1"
    },
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "Û∞àπ $1",
            "(.*) - bash": "ÔÑ†  [$1]",
            "(.*) - Brave": "Ôâ®  [$1]",
            "(.*) - Chromium": "Ôâ®  [$1]",
            "(.*) - VSCodium": "ÔÑ°  [$1]"
        },
        "separate-outputs": true,
        "max-length": 35
    },
    "clock": {
        "locale": "en_US.UTF-8",
        "format": "{:%B %d, (%R)} ÔÅ≥ ",
        "tooltip-format": "<span size='8pt' font='Noto Sans Mono'>{calendar}</span>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    },
    "mpris": {
        "format": "{player_icon}{dynamic}",
        "format-paused": "{status_icon}<i>{dynamic}</i>",
        "player-icons": {
            "default": "ÔÄÅ "
        },
        "status-icons": {
            "paused": "ÔÅã "
        },
        "max-length": 25
    },
    "network": {
        "format-wifi": "Ôá´ {essid}({signalStrength}%)",
        "format-ethernet": "ÔÉÅ {ifname}",
        "format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "kitty -e 'nmtui'"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "cpu": {
        "interval": 15,
        "format": "Ôãõ {}%",
        "max-length": 10,
        "on-click": "kitty htop"
    },
    "memory": {
        "interval": 30,
        "format": "Ôî∏ {}%",
        "max-length": 10,
        "on-click": "kitty htop"
    },
    "wireplumber": {
        "format": "{icon}{volume}% ",
        "format-muted": "ÔÄ¶",
        "format-icons": [
            "ÔÄ¶ ",
            "ÔÄß ",
            "ÔÄ® "
        ],
        "on-click": "/usr/bin/wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+",
        "on-click-right": "/usr/bin/wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
        "on-scroll-up" : "/usr/bin/wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+",
        "on-scroll-down" : "/usr/bin/wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 40,
            "critical": 20
        },
        "format": "{icon}{capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "ÔâÑ ",
            "ÔâÉ ",
            "ÔâÇ ",
            "ÔâÅ ",
            "ÔâÄ "
        ]
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}{percent}%",
        "format-icons": [
            "ÔÜÖ ",
            "ÔÑë "
        ],
        "on-click": "/usr/bin/brightnessctl set 5%+",
        "on-click-right": "/usr/bin/brightnessctl set 5%-",
        "on-scroll-up" : "/usr/bin/brightnessctl set 1%+",
        "on-scroll-down" : "/usr/bin/brightnessctl set 1%-"
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-out",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ]
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "performance": "üöÄ",
        "balanced": "‚öñÔ∏è",
        "power-saver": "üîã",
        "default": "‚ö°"
      }
    }
}
